<p id="notice"><%= notice %></p>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Books in stock</th>
      <th scope="col">Descr</th>
     
    </tr>
  </thead>
</table>

<%= link_to 'New Book', new_book_path %>
<p></p>
<%= link_to 'Back', books_path %>



    
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @books.each do |book| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title><%= book.title %></title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= book.title %></text></svg>
              <div class="card-body"><%= image_tag "https://editus.ru/img/services/verstka/cover_3.jpg" %>
                <p class="card-text"><%= book.description %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', book %></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_book_path(book) %></button>
                  </div>
                  <small class="text-muted">Price: <%= book.price %></small>
                  <small class="text-muted">In stock: <%= book.books_in_stock %></small>
                  <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>





 
 