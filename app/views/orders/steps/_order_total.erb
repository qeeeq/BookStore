<% if @order.credit_card.present? %>
	<p>Card number: <%= @order.credit_card.number %></p>
<% else %>
	<p>Card number:</p>
<% end %>

<% if @order.billing_address.present? %>
	<p>Billing address: <%= @order.billing_address.bil_address %></p>
<% else %>
	<p>Billing address:</p>
<% end %>

<% if @order.shipping_address.present? %>
	<p>Shipping address: <%= @order.shipping_address.ship_address %></p>
<% else %>
	<p>Shipping address:</p>
<% end %>



