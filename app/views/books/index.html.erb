<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Navigate
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">
          <%= link_to root_path do%>
            <button type="button" class="btn btn-primary my-2">Index</button>
          <%end%>
        </a>
        <a class="dropdown-item" href="#">
          <%= link_to "/books" do%>
            <button type="button" class="btn btn-primary my-2">Books</button>
          <%end%>
        </a>
        <a class="dropdown-item" href="#">
          <%= link_to orders_path do%>
            <button type="button" class="btn btn-primary my-2">My Orders</button>
          <%end%>
        </a>
        <a class="dropdown-item" href="#">
          <%= link_to credit_cards_path do %>
            <button type="button" class="btn btn-primary my-2">My credit cards</button>
          <%end%>
        </a>
        <a class="dropdown-item" href="#">
          <%= link_to billing_addresses_path do%>
            <button type="button" class="btn btn-primary my-2">My billing_addresses</button>
          <%end%>
        </a>
        <a class="dropdown-item" href="#">
          <%= link_to shipping_addresses_path do%>
            <button type="button" class="btn btn-primary my-2">My shipping_addresses</button>
          <%end%>
        </a>
      </div>
    </div>

    <% if current_customer %>
      <%= link_to order_path(current_customer.current_order) do %>
        <button type="button" class="btn btn-primary my-2">My current order</button>
      <%end%>

      <%= link_to customer_path(current_customer) do%>
        <button type="button" class="btn btn-primary my-2">My profile</button>
      <%end%>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <div>
            <% if customer_signed_in? %>
              <%= link_to destroy_customer_session_path, method: :get, data: { confirm: 'Are you sure?' } do%>
                <button type="button" class="btn btn-primary my-2">Logout</button>
              <%end%>
            <% else %>
             <%= link_to new_customer_session_path do%>
                <button type="button" class="btn btn-primary my-2">Signed in</button>
              <%end%>
              <%= link_to new_customer_registration_path do%>
                <button type="button" class="btn btn-primary my-2">Register now</button>
              <% end%>
            <% end %>
          </div>
        </li>
      </ul>
      <form class="form-inline mt-2 mt-md-0"> 
        <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
</header>



<main role="main">
  <section class="jumbotron text-center">
    <% if customer_signed_in? %>
    <br>
      <div style="text-align: left">Logged in as <span style="color:green"><%= current_customer.email %></span></div>
    <%end%>

    <div class="container">
      <h1 class="jumbotron-heading">Books example</h1>
      <p class="lead text-muted">Something short and leading about the collection bla-bla.</p>
      <%= form_with(url: root_path, method: "get", local: true) do %>
        <%= label_tag(:q, "Search for:") %>
        <%= text_field_tag :q, params[:q]%>
        <%= submit_tag "Search", name: nil %>
      <% end %>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">

        <% @books.each do |book| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="50" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                <title>
                  <%= book.title %>
                </title>
                <rect width="100%" height="100%" fill="#55595c"></rect>
                <text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= book.title %></text>
              </svg>
              <div class="card-body">
                <div style = "width:150px; height:auto">
                  <%= image_tag "https://editus.ru/img/services/verstka/cover_3.jpg", style: 'width:100%'%>
                </div>
                <p class="card-text">
                  <%= book.author.name %>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                      <%= link_to 'View detailed', book %>
                    </button>
                  </div>
                  <div>
                    <%= link_to 'Buy', order_items_path(book_id: book.id), method: :post, class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                  <small class="text-muted">
                    Price: <%= book.price %>
                  </small>
                  <small class="text-muted">
                    In stock: <%= book.books_in_stock %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</main>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>